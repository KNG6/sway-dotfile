# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 2
    color_good = "#6298e0"
    color_bad = "#808080"
    color_degraded = "#faffff"
    output_format = i3bar
}

#order += "ipv6"
#order += "disk /"
#order += "path_exists VPN"
order += "ethernet tun0"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "battery all"
#order += "load"
order += "tztime local"

path_exists VPN {
    # path exists when a VPN tunnel launched by nmcli/nm-applet is active
    path = "/proc/sys/net/ipv4/conf/tun0"
}

wireless _first_ {
    format_up = "W: (%quality %essid) %ip"
    format_down = "W: down"
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

ethernet tun0 {
    # if you use %speed, i3status requires root privileges
    format_up = "VPN: %ip"
    format_down = "VPN: down"
}

battery all {
    format = "%status %percentage %emptytime"
    format_down = "No battery"
    status_chr = "ðŸ”Œ CHR"
    status_bat = "ðŸ”‹ BAT"
    status_unk = "? UNK"
    status_full = "â˜» FULL"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

tztime local {
    format = "%d-%m-%Y %H:%M:%S"
}

load {
    format = "%1min"
}

disk "/" {
    format = "%avail"
}

volume master {
     format = "ðŸ”Š: %volume"
     format_muted = "ðŸ”‡: muted (%volume)"
     device = "default"
     mixer = "Master"
     mixer_idx = 0
}
